// Exportierte Funktionen
GIBFREI NIX sayHello(name: WORT) {
    DRUCKE("Hallo, ${name}!");
}

GIBFREI GANZ add(a: GANZ, b: GANZ) {
    ZURÜCK a + b;
}

// Lokale Funktionen
GANZ add_local(a: GANZ, b: GANZ) {
  ZURÜCK a+b;
}

GANZ haupt() {
  DRUCKE("Hallo, Welt!");
  DRUCKE(add_local(1,2));
  ZURÜCK 0;
}